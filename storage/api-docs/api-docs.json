                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "KYC"
                ],
                "summary": "Submit or update KYC information",
                "description": "Submit Know Your Customer (KYC) information including personal details, BVN, and NIN numbers.",
                "operationId": "e5b2bc5938cd7cbdc97b0b34ded1e3b1",
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "John",
                                        "nullable": true
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Doe",
                                        "nullable": true
